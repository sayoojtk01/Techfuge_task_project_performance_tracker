<odoo>
    <record id="view_project_performance_report_wizard" model="ir.ui.view">
        <field name="name">project.performance.report.wizard.form</field>
        <field name="model">project.performance.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Project Performance Report">
                <group>
                    <field name="project_ids" widget="many2many_tags"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button string="Generate XLSX" type="object" name="generate_xlsx" class="btn-primary"/>
                    <button string="Close" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_project_performance_report_wizard" model="ir.actions.act_window">
        <field name="name">Project Performance Report</field>
        <field name="res_model">project.performance.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
