<odoo>
    <!--    Inherit project form and add custom field   -->
    <record id="view_project_form_inherit_performance" model="ir.ui.view">
        <field name="name">project.project.form.performance</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='settings']" position="before">
                <page name="performance_info" string="Performance Info">
                    <group>
                        <field name="performance_score"/>
                        <field name="project_efficiency"/>
                        <field name="billable_hours"/>
                        <field name="non_billable_hours"/>
                        <field name="external_report_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
